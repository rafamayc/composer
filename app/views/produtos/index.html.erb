<link href="/assets/style3.css" media="screen" rel="stylesheet" />
<link href="/assets/style1.css" media="screen" rel="stylesheet" />
<h1>Produtos</h1>

<div class="testbox">

<%= link_to 'Novo Produto', new_produto_path , class: "button add"  %><br/>

<%= form_tag produtos_path, :method => 'get' do %>
  <p>
   <%= text_field_tag :search, params[:search], :placeholder => "Digite o Nome" %>
    <%= submit_tag "Busca",class:"button save", :name => nil %> <br/> <font color="red">Para exibir todos os registros deixe o campo vazio</font>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>&nbsp;</th>
      <th>Valor</th>
      <th>&nbsp;</th>
      <th>Saldo</th>
      <th>&nbsp;</th>
      <th>Situacao</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.name %></td>
        <td>&nbsp;</td>
        <td><%= produto.valor %></td>
        <td>&nbsp;</td>
        <td><%= produto.saldo %></td>
        <td>&nbsp;</td>
        <td><%= produto.ativo %></td>
        <td><%= link_to 'Exibir', produto,class:"button show" %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto),class:"button edit" %></td>
        <td><%= link_to 'Deletar', produto,class:"button delete", method: :delete, data: { confirm: 'Tem certeza de deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


