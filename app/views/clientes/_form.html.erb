<%= simple_form_for(@cliente) do |f| %> 
        <%= f.error_notification %>
        <%= f.error :telefone, :id => "telefone_error" %>
  <div class="accounttype">
   <%= f.radio_button :tipocad, 'fisica', :checked => true %> 
  <%= label :tipocad_fisica, 'Pessoa Fisica' %>
  <%= f.radio_button :tipocad, 'juridica' %>
  <%= label :tipocad_juridica, 'Pessoa Juridica' %>
    </div> 

    <%= f.text_field :name, :placeholder => "Razao Social - Nome Completo(Obrigatorio)", :class => "texto" %>
    <%= f.text_field :nomefantasia, :placeholder => "Nome Fantasia - Apelido" %>
    <%= f.text_field :logradouro, :placeholder => "Endereco" %>
    <%= f.text_field :numero, :placeholder => "Numero" %>
    <%= f.text_field :complemento, :placeholder => "Complemento" %>
    <%= f.text_field :bairro, :placeholder => "Bairro" %>
    <%= f.text_field :estado, :placeholder => "Estado" %>
    <%= f.text_field :cidade, :placeholder => "Cidade" %>
    <%= f.text_field :cep, :placeholder => "CEP" %>
    <%= f.text_field :cnpj_cpf, :placeholder => "CNPJ-CPF" %>
    <%= f.text_field :contato, :placeholder => "Contato(Obrigatorio)" %>
    <%= f.text_field :telefone, :placeholder => "Telefone(Obrigatorio)" %>
    <%= f.text_field :email, :placeholder => "Email(Obrigatorio)" %>
    <%= f.text_field :limite, :placeholder => "Limite de Compra" %>
<div class="gender">

  <%= f.radio_button :ativo, 'ativo', :checked => true %> 
  <%= label :ativo_ativo, 'Ativo' %>
  <%= f.radio_button :ativo, 'inativo' %>
  <%= label :ativo_inativo, 'Inativo' %>
  </div>
  <div class="form-actions">
  
			<%= f.button :submit, class:"button Update",:value => "Registra Cliente" %>

    <%= link_to 'Voltar', clientes_path, class:"button down" %>
  </div>
<% end %>

