<%= simple_form_for(@item_pedido) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :quantidade %>
    <%= f.association :produto%>
    <%= f.association :pedido%>
    <%= f.input :valor_unitario %>
    <%= f.input :valor_total %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
