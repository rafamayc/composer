<h1>Listing item_pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Quantidade</th>
      <th>Produto</th>
      <th>Valor unitario</th>
      <th>Valor total</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @item_pedidos.each do |item_pedido| %>
      <tr>
        <td><%= item_pedido.quantidade %></td>
        <td><%= item_pedido.produto.name %></td>
        <td><%= item_pedido.valor_unitario %></td>
        <td><%= item_pedido.valor_total %></td>
        <td><%= link_to 'Show', item_pedido %></td>
        <td><%= link_to 'Edit', edit_item_pedido_path(item_pedido) %></td>
        <td><%= link_to 'Destroy', item_pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

