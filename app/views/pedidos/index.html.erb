<h1>Listing pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Dataaprovacao</th>
      <th>Datapedido</th>
      <th>Cliente</th>
      <th>Tipo pag</th>
      <th>For pags</th>
      <th>Valortotal</th>
      <th>Statuspedido</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.dataaprovacao %></td>
        <td><%= pedido.datapedido %></td>
        <td><%= pedido.cliente.name %></td>
        <td><%= pedido.tipo_pag.description %></td>
        <td><%= pedido.for_pags %></td>
        <td><%= pedido.valortotal %></td>
        <td><%= pedido.statuspedido %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

