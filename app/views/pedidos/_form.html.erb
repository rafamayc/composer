<%= simple_form_for(@pedido) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :dataaprovacao %>
    <%= f.input :datapedido %>
    <%= f.association :cliente %>
    <%= f.association :tipo_pag %>
    <%= f.input :valortotal %>
    <%= f.input :statuspedido %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
