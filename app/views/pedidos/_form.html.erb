<%= simple_form_for(@pedido) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <br/>
    <label> Data do Pedido</label><br/>
    <%= f.date_field :datapedido %>
    <br/>    <br/>
    <%= f.association :cliente %>
    <br/>
    <%= f.association :tipo_pag, :label_method => lambda { |tipo_pag| "#{tipo_pag.description}" } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
